#! /bin/sh
#
# Generate the manpage from the template.
#
# INPUT FILES
#	man/stu.1.in    The Stu manpage template
#	VERSION
#
# OUTPUT FILES
#	man/stu.1       The Stu manpage
#

export LC_ALL=C
export LC_TIME=C
unset LANG LANGUAGE

VERSION=$(cat VERSION)
DATE=$(date '+%B %Y')

{
	echo ".\\\" Autogenerated by $0"
	<man/stu.1.in sed -e 's,\$STU_VERSION,'"$VERSION"',g;s,\$DATE,'"$DATE"',g'
} >man/stu.1
