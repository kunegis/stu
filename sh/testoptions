#! /bin/sh
#
# Test consistency of the options.
#

ret=0

#
# Check that both lists of options are the same
#

<src/stu.cc sed -e '/^[[:space:]]*" *-[0-9a-zA-Z]/!d;s,^[^-]*-\(.\).*$,\1,' >testoptions.a

<man/stu.1.in sed -e '/^[[:space:]]*\.IP[[:space:]]\{1,\}"\{0,1\}-./!d;s/^[[:space:]]*\.IP[[:space:]]\{1,\}"\{0,1\}-\(.\).*$/\1/' >testoptions.b

if ! cmp testoptions.a testoptions.b ; then
	echo >&2 "$0: *** The options given and 'src/stu.cc' are different from those given in 'man/stu.1.in'"
	echo >&2 "Options from 'src/stu.cc':"
	cat >&2 testoptions.a
	echo >&2 "Options from 'man/stu.1.in':"
	cat >&2 testoptions.b
	echo >&2 "Diff:"
	diff testoptions.a testoptions.b
	ret=1
fi

rm -f testoptions.a testoptions.b

exit $ret
