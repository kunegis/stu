#! /bin/sh

rm -f ? || exit 1

../../stu.test >stdout-correct

rm -f ? || exit 1

../../stu.test -m random >list.out
exitcode="$?"

if [ "$exitcode" != 0 ] ; then
	echo '*** (A)'
	exit 1
fi

diff list.out stdout-correct && {
	echo '*** (B)'
	exit 1
}

diff out output-correct || {
	echo '*** (C)'
	exit 1
}

# Check that two invocations do not give the same order

rm -f ? || exit 1

../../stu.test -m random >list.out2
exitcode="$?"

if [ "$exitcode" != 0 ] ; then
	echo '*** (A2)'
	exit 1
fi

# The two runs must *not* have identical order 
diff list.out list.out2 && {
	echo '*** (B2)'
	exit 1
}

diff out output-correct || {
	echo '*** (C2)'
	exit 1
}


rm -f out list.* stdout-correct || exit 1

exit 0
